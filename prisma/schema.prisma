generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  externalId  String   @unique @map("external_id")
  displayName String?  @map("display_name")
  email       String?
  role        String   @default("counselor") // UserRole: supervisor, counselor
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  counselorAssignments  Assignment[] @relation("CounselorAssignments")
  supervisorAssignments Assignment[] @relation("SupervisorAssignments")
  scenariosCreated      Scenario[]
  sessions              Session[]    @relation("UserSessions")

  @@map("users")
}

model Account {
  id                     String   @id @default(uuid())
  name                   String
  policiesProceduresPath String?  @map("policies_procedures_path")
  vectorStoreId          String?  @map("vector_store_id")
  createdAt              DateTime @default(now()) @map("created_at")
  updatedAt              DateTime @updatedAt @map("updated_at")

  scenarios   Scenario[]
  assignments Assignment[]

  @@map("accounts")
}

model Scenario {
  id                     String    @id @default(uuid())
  title                  String
  description            String?
  prompt                 String
  evaluatorContextPath   String?   @map("evaluator_context_path")
  accountId              String    @map("account_id")
  createdBy              String    @map("created_by")
  createdAt              DateTime  @default(now()) @map("created_at")
  updatedAt              DateTime  @updatedAt @map("updated_at")
  isOneTime              Boolean   @default(false) @map("is_one_time")
  mode                   String    @default("phone") // ScenarioMode: phone, chat
  relevantPolicySections String?   @map("relevant_policy_sections")
  category               String?   // ScenarioCategory: onboarding, refresher, advanced, assessment
  // External API metadata
  skill                  String?   // DEPRECATED: Use skills array
  skills                 String[]  @default([])
  difficulty             String?   @default("intermediate") // beginner, intermediate, advanced
  estimatedTime          Int?      @default(15) @map("estimated_time") // Estimated completion time in minutes

  account     Account      @relation(fields: [accountId], references: [id])
  creator     User         @relation(fields: [createdBy], references: [id])
  assignments Assignment[]
  sessions    Session[]    @relation("ScenarioSessions")

  @@map("scenarios")
}

model Assignment {
  id               String    @id @default(uuid())
  accountId        String?   @map("account_id")
  scenarioId       String    @map("scenario_id")
  counselorId      String    @map("counselor_id")
  assignedBy       String    @map("assigned_by")
  status           String    @default("pending") // AssignmentStatus: pending, in_progress, completed
  createdAt        DateTime  @default(now()) @map("created_at")
  dueDate          DateTime? @map("due_date")
  startedAt        DateTime? @map("started_at")
  completedAt      DateTime? @map("completed_at")
  supervisorNotes  String?   @map("supervisor_notes")
  requireRecording Boolean   @default(false) @map("require_recording")

  account    Account?    @relation(fields: [accountId], references: [id], onDelete: SetNull)
  scenario   Scenario    @relation(fields: [scenarioId], references: [id], onDelete: Restrict)
  counselor  User        @relation("CounselorAssignments", fields: [counselorId], references: [id], onDelete: Cascade)
  supervisor User        @relation("SupervisorAssignments", fields: [assignedBy], references: [id], onDelete: Restrict)
  session    Session?
  evaluation Evaluation?

  @@index([counselorId])
  @@index([scenarioId])
  @@index([status])
  @@map("assignments")
}

model Session {
  id             String    @id @default(uuid())
  assignmentId   String?   @unique @map("assignment_id")
  userId         String?   @map("user_id")
  scenarioId     String?   @map("scenario_id")
  modelType      String    @default("chat") @map("model_type") // ModelType: phone, chat
  status         String    @default("active") // SessionStatus: active, completed, abandoned
  startedAt      DateTime  @default(now()) @map("started_at")
  endedAt        DateTime? @map("ended_at")
  currentAttempt Int       @default(1) @map("current_attempt")

  assignment Assignment?      @relation(fields: [assignmentId], references: [id])
  user       User?            @relation("UserSessions", fields: [userId], references: [id])
  scenario   Scenario?        @relation("ScenarioSessions", fields: [scenarioId], references: [id])
  transcript TranscriptTurn[]
  recording  Recording?
  evaluation Evaluation?
  flags      SessionFlag[]

  @@index([assignmentId])
  @@index([userId])
  @@index([scenarioId])
  @@map("sessions")
}

model TranscriptTurn {
  id            String   @id @default(uuid())
  sessionId     String   @map("session_id")
  role          String   // TranscriptRole: user, assistant
  content       String
  turnOrder     Int      @map("turn_order")
  attemptNumber Int      @default(1) @map("attempt_number")
  createdAt     DateTime @default(now()) @map("created_at")

  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([sessionId, attemptNumber])
  @@map("transcript_turns")
}

model Evaluation {
  id             String   @id @default(uuid())
  assignmentId   String?  @unique @map("assignment_id")  // Exclusive arc: set for assignment evals
  sessionId      String?  @unique @map("session_id")     // Exclusive arc: set for free practice evals
  overallScore   Float    @map("overall_score")
  feedbackJson   String   @map("feedback_json")          // NOTE: Stores markdown, not JSON (legacy name)
  strengths      String                                   // NOTE: Stores grade letter e.g. "A", "B" (legacy name)
  areasToImprove String   @map("areas_to_improve")       // NOTE: Currently unused, always empty string
  rawResponse    String?  @map("raw_response")            // Full LLM response before flag stripping
  createdAt      DateTime @default(now()) @map("created_at")

  assignment Assignment? @relation(fields: [assignmentId], references: [id])
  session    Session?    @relation(fields: [sessionId], references: [id], onDelete: Restrict)

  @@map("evaluations")
}

model Recording {
  id            String   @id @default(uuid())
  sessionId     String   @unique @map("session_id")
  filePath      String   @map("file_path")
  duration      Int?
  fileSizeBytes Int?     @map("file_size_bytes")
  createdAt     DateTime @default(now()) @map("created_at")

  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("recordings")
}

model SessionFlag {
  id        String   @id @default(uuid())
  sessionId String   @map("session_id")
  type      String   // SessionFlagType enum (validated via Zod)
  severity  String   @default("info") // FlagSeverity: info, warning, critical
  details   String   // Human-readable description
  metadata  Json?    // Structured data for automated findings
  status    String   @default("pending") // FlagStatus: pending, reviewed, dismissed
  createdAt DateTime @default(now()) @map("created_at")

  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([status, severity])
  @@map("session_flags")
}
