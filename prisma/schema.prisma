// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================================================
// Note: SQLite doesn't support enums, so we use String fields.
// TypeScript enums are defined in src/types/index.ts for type safety.
// Valid values:
//   - UserRole: "supervisor" | "counselor"
//   - ScenarioMode: "phone" | "chat"
//   - ScenarioCategory: "onboarding" | "refresher" | "advanced" | "assessment"
//   - AssignmentStatus: "pending" | "in_progress" | "completed"
//   - SessionStatus: "active" | "completed" | "abandoned"
//   - TranscriptRole: "user" | "assistant"
// ============================================================================

// ============================================================================
// Models
// ============================================================================

model User {
  id          String   @id @default(uuid())
  externalId  String   @unique @map("external_id")
  displayName String?  @map("display_name")
  email       String?
  role        String   @default("counselor") // UserRole: "supervisor" | "counselor"
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relationships
  sessions               Session[]
  createdScenarios       Scenario[]   @relation("ScenarioCreator")
  counselorAssignments   Assignment[] @relation("CounselorAssignments")
  supervisorAssignments  Assignment[] @relation("SupervisorAssignments")

  @@map("users")
}

model Account {
  id                     String  @id @default(uuid())
  name                   String
  policiesProceduresPath String? @map("policies_procedures_path")
  policiesVectorFileId   String? @map("policies_vector_file_id")

  // Relationships
  scenarios   Scenario[]
  assignments Assignment[]

  @@map("accounts")
}

model Scenario {
  id                     String    @id @default(uuid())
  title                  String
  description            String?
  prompt                 String
  evaluatorContextPath   String?   @map("evaluator_context_path")
  accountId              String?   @map("account_id")
  createdBy              String    @map("created_by")
  createdAt              DateTime  @default(now()) @map("created_at")
  updatedAt              DateTime? @updatedAt @map("updated_at")
  isOneTime              Boolean   @default(false) @map("is_one_time")
  mode                   String    @default("phone") // ScenarioMode: "phone" | "chat"
  relevantPolicySections String?   @map("relevant_policy_sections")
  category               String?   // ScenarioCategory: "onboarding" | "refresher" | "advanced" | "assessment"

  // Relationships
  account     Account?     @relation(fields: [accountId], references: [id], onDelete: SetNull)
  creator     User         @relation("ScenarioCreator", fields: [createdBy], references: [id])
  sessions    Session[]
  assignments Assignment[]

  @@map("scenarios")
}

model Assignment {
  id              String    @id @default(uuid())
  accountId       String?   @map("account_id")
  scenarioId      String    @map("scenario_id")
  counselorId     String    @map("counselor_id")
  assignedBy      String    @map("assigned_by")
  status          String    @default("pending") // AssignmentStatus: "pending" | "in_progress" | "completed"
  createdAt       DateTime  @default(now()) @map("created_at")
  dueDate         DateTime? @map("due_date")
  startedAt       DateTime? @map("started_at")
  completedAt     DateTime? @map("completed_at")
  sessionId       String?   @unique @map("session_id")
  evaluationId    String?   @map("evaluation_id")
  supervisorNotes String?   @map("supervisor_notes")

  // Relationships
  account    Account?    @relation(fields: [accountId], references: [id], onDelete: SetNull)
  scenario   Scenario    @relation(fields: [scenarioId], references: [id], onDelete: Restrict)
  counselor  User        @relation("CounselorAssignments", fields: [counselorId], references: [id], onDelete: Cascade)
  supervisor User        @relation("SupervisorAssignments", fields: [assignedBy], references: [id], onDelete: Restrict)
  evaluation Evaluation? @relation(fields: [evaluationId], references: [id], onDelete: SetNull)

  @@index([counselorId, scenarioId])
  @@map("assignments")
}

model Session {
  id           String    @id @default(uuid())
  userId       String?   @map("user_id")
  scenarioId   String?   @map("scenario_id")
  assignmentId String?   @map("assignment_id")
  modelType    String    @map("model_type")
  status       String    @default("active") // SessionStatus: "active" | "completed" | "abandoned"
  startedAt    DateTime  @default(now()) @map("started_at")
  endedAt      DateTime? @map("ended_at")

  // Relationships
  user       User?            @relation(fields: [userId], references: [id])
  scenario   Scenario?        @relation(fields: [scenarioId], references: [id], onDelete: SetNull)
  turns      TranscriptTurn[]
  evaluation Evaluation?
  recording  Recording?

  // Note: One-directional relationship from Session to Assignment
  // Session stores assignmentId but Assignment references Session via sessionId
  // This avoids circular relationship issues

  @@map("sessions")
}

model TranscriptTurn {
  id         String   @id @default(uuid())
  sessionId  String   @map("session_id")
  turnNumber Int      @map("turn_number")
  role       String   // TranscriptRole: "user" | "assistant"
  content    String
  capturedAt DateTime @map("captured_at")

  // Relationships
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("transcript_turns")
}

model Evaluation {
  id                  String   @id @default(uuid())
  sessionId           String   @unique @map("session_id")
  evaluationText      String   @map("evaluation_text")
  modelUsed           String?  @map("model_used")
  transcriptTurnCount Int?     @map("transcript_turn_count")
  createdAt           DateTime @default(now()) @map("created_at")

  // Relationships
  session     Session      @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  assignments Assignment[]

  @@map("evaluations")
}

model Recording {
  id              String   @id @default(uuid())
  sessionId       String   @unique @map("session_id")
  filePath        String   @map("file_path")
  durationSeconds Int?     @map("duration_seconds")
  fileSizeBytes   Int?     @map("file_size_bytes")
  createdAt       DateTime @default(now()) @map("created_at")

  // Relationships
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("recordings")
}
